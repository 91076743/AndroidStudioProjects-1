<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.palmdigital.madlib_summer.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Enter a person:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_start"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_color01"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter a place:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_body_part"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_body_part"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter a adjective:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_noun"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_noun"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter the same place:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_verb"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_verb"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter a plural noun:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_adjective"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_adjective"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter an adjective:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_adj"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_adj"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_verbs"
                android:layout_weight="0"
                android:textSize="10sp"
                android:text="Enter a plural noun:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_verbs"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter a place:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_nouns"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_nouns"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter an action verb:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_end"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_end"
                android:layout_weight="0"
                android:textSize="8sp" />

            <TextView
                android:text="Enter a plural noun:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_plural_noun"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_plural_noun"
                android:layout_weight="0"
                android:textSize="10sp" />

            <TextView
                android:text="Enter a plural noun:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_plural"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_plural"
                android:layout_weight="0"
                android:textSize="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_non"
                android:layout_weight="0"
                android:text="Enter a noun:"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_non"
                android:layout_weight="0"
                android:textSize="10sp" />

            <TextView
                android:text="Enter an action verb:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_action"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_action"
                android:layout_weight="0"
                android:textSize="10sp" />

            <TextView
                android:text="Enter an action verb:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_act"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_act"
                android:layout_weight="0"
                android:textSize="10sp" />

            <TextView
                android:text="Enter an adjective:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_a"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edit_text_a"
                android:layout_weight="0"
                android:textSize="10sp" />

            <Button
                android:text="Make Story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="makeStory"
                android:id="@+id/button_submit"
                android:layout_weight="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_story"
                android:textSize="10sp"
                android:layout_weight="0" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
