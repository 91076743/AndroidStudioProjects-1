<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.calculaterv02.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_top"
        android:textAlignment="center"
        android:textSize="50sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon0"
            android:id="@+id/imageView"
            android:layout_width="28dp" />

        <ImageView
            app:srcCompat="@drawable/icon1"
            android:id="@+id/imageView1"
            android:layout_height="40dp"
            android:layout_width="28dp" />

        <ImageView
            app:srcCompat="@drawable/icon2"
            android:id="@+id/imageView2"
            android:layout_height="40dp"
            android:layout_width="28dp" />

        <ImageView
            app:srcCompat="@drawable/icon3"
            android:id="@+id/imageView3"
            android:layout_height="40dp"
            android:layout_width="28dp" />

        <ImageView
            app:srcCompat="@drawable/icon4"
            android:id="@+id/imageView4"
            android:layout_height="40dp"
            android:layout_width="28dp" />

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon5"
            android:id="@+id/imageView5"
            android:layout_width="28dp" />

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon6"
            android:id="@+id/imageView6"
            android:layout_width="28dp" />

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon7"
            android:id="@+id/imageView7"
            android:layout_width="28dp" />

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon8"
            android:id="@+id/imageView8"
            android:layout_width="28dp" />

        <ImageView
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon9"
            android:id="@+id/imageView9"
            android:layout_weight="0.00"
            android:layout_width="28dp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="297dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/plus"
            android:id="@+id/imageView_Plus"
            android:layout_width="70dp"
            android:layout_weight="0.56" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/minus"
            android:id="@+id/imageView_Minus"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_middle"
        android:textAlignment="center"
        android:textSize="50sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon0"
            android:id="@+id/imageView10"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon1"
            android:id="@+id/imageView11"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon2"
            android:id="@+id/imageView12"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon3"
            android:id="@+id/imageView13"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon4"
            android:id="@+id/imageView14"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon5"
            android:id="@+id/imageView15"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon6"
            android:id="@+id/imageView16"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon7"
            android:id="@+id/imageView17"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon8"
            android:id="@+id/imageView18"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/icon9"
            android:id="@+id/imageView19"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:srcCompat="@drawable/equal"
        android:id="@+id/imageView_equal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_bottom"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@android:color/holo_orange_dark" />

</LinearLayout>
